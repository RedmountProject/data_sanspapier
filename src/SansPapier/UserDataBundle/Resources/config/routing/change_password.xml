<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

  <route id="sanspapier_change_password" pattern="/">
    <default key="_controller">SansPapierUserDataBundle:ChangePassword:form</default>
    <requirement key="_method">GET|POST</requirement>
  </route>
  
  <route id="sanspapier_change_password_submit" pattern="/submit.{_format}">
    <default key="_controller">SansPapierUserDataBundle:ChangePassword:submit</default>
    <default key="_format">json</default>
  </route>
  
</routes>
